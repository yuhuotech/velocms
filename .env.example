# Database Configuration

# Database Type: 'sqlite' (development) or 'vercel' (production)
DATABASE_TYPE=sqlite

# SQLite (local development)
DATABASE_PATH=./data/velocms.db

# Vercel Postgres (production)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Vercel KV (production cache)
# KV_REST_API_URL=https://your-kv-url
# KV_REST_API_TOKEN=your-kv-token

# Authentication

# Secret key for next-auth (generate with: openssl rand -base64 32)
AUTH_SECRET=your-secret-key-here-change-this-in-production

# Base URL for authentication
AUTH_URL=http://localhost:3000

# Site Configuration

NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=My Blog

# Optional: Social links
NEXT_PUBLIC_TWITTER_HANDLE=
NEXT_PUBLIC_GITHUB_HANDLE=

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Optional: Comment system
# NEXT_PUBLIC_GISCUS_REPO=
# NEXT_PUBLIC_GISCUS_REPO_ID=
# NEXT_PUBLIC_GISCUS_CATEGORY=
# NEXT_PUBLIC_GISCUS_CATEGORY_ID=
